<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallpaper"
    android:id="@+id/debtMainLayout">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/relativeLayout4">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/debtListView"
        android:background="@drawable/cd_container_shape"/>
</RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBarDebt"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/custom_progressbar"
        android:indeterminate="false"
        android:max="100"
        android:progress="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MONEY"
        android:textColor="#ff0000"
        android:textSize="45sp"
        android:id="@+id/debtActivityTitle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/roundbutton"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="35sp"
        android:id="@+id/debtsEditButton"
        android:layout_toRightOf="@+id/debtActivityTitle"
        android:layout_toEndOf="@+id/debtActivityTitle"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>