<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallpaper">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/mainAlertButton"
        android:src="@drawable/alert_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/pButtonLayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/pStatusButton"
                android:src="@drawable/green_alert_button"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:id="@+id/pNeedTV"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pStatusButton" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pButtonLayout"
            android:layout_toEndOf="@+id/pButtonLayout"
            android:id="@+id/riButtonLayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/riStatusButton"
                android:src="@drawable/green_alert_button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ri"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:id="@+id/riNeedTV"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/riStatusButton" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/riButtonLayout"
            android:layout_toEndOf="@+id/riButtonLayout"
            android:id="@+id/nButtonLayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/nStatusButton"
                android:src="@drawable/green_alert_button"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:id="@+id/nNeedTV"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nStatusButton" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nButtonLayout"
            android:layout_toEndOf="@+id/nButtonLayout"
            android:id="@+id/roButtonLayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/roStatusButton"
                android:src="@drawable/green_alert_button"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:id="@+id/roNeedTV"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/roStatusButton" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Shopping"
        android:textSize="45sp"
        android:textColor="@android:color/white"
        android:id="@+id/shoppingTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ratingLayout"
        android:layout_above="@+id/mainAlertButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cd_container_shape"
        android:visibility="gone">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/needRatingBar"
            style= "@style/CustomRatingBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:stepSize="1"
            android:numStars="3" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/custom_progressbar"
        android:indeterminate="false"
        android:max="100"
        android:progress="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>